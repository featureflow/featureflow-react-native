{
  "name": "@featureflow/react-native-sdk",
  "version": "1.0.0",
  "description": "Official Featureflow React Native SDK for feature flags and A/B testing",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/featureflow/featureflow-react-native.git"
  },
  "homepage": "https://github.com/featureflow/featureflow-react-native#readme",
  "bugs": {
    "url": "https://github.com/featureflow/featureflow-react-native/issues"
  },
  "keywords": [
    "featureflow",
    "feature flags",
    "feature toggles",
    "react-native",
    "ab-testing",
    "experimentation",
    "mobile",
    "typescript"
  ],
  "author": "Featureflow Pty. Ltd. <support@featureflow.io>",
  "license": "Apache-2.0",
  "peerDependencies": {
    "@react-native-async-storage/async-storage": ">=1.17.0",
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "dependencies": {
    "base64-js": "^1.5.1",
    "featureflow-client": "^2.0.0",
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-native": "^0.73.0",
    "rollup": "^4.9.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}

